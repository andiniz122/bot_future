# Trading Dashboard Pro - Environment Variables

# API Configuration (Cloud Setup)
REACT_APP_API_BASE_URL=http://62.72.1.122:8000
REACT_APP_WS_BASE_URL=ws://62.72.1.122:8000

# WebSocket Endpoints (Cloud Setup)
REACT_APP_WS_SENTIMENT_URL=ws://62.72.1.122:8000/ws/sentiment
REACT_APP_WS_OHLCV_URL=ws://62.72.1.122:8000/ws/ohlcv
REACT_APP_WS_RSI_MACD_URL=ws://62.72.1.122:8000/ws/rsi-macd

# Application Settings
REACT_APP_NAME=Trading Dashboard Pro
REACT_APP_VERSION=6.0.0
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_REPORTING=false

# Performance Settings
REACT_APP_REFRESH_INTERVAL=30000
REACT_APP_WEBSOCKET_RECONNECT_INTERVAL=5000
REACT_APP_API_TIMEOUT=10000

# UI Configuration
REACT_APP_DEFAULT_THEME=dark
REACT_APP_DEFAULT_CHART_PERIOD=1d
REACT_APP_NOTIFICATION_TIMEOUT=5000

# Debug Settings (Development Only)
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_DATA=false
REACT_APP_LOG_LEVEL=info

# External Services (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=
REACT_APP_HOTJAR_ID=

# Build Configuration
GENERATE_SOURCEMAP=true
SKIP_PREFLIGHT_CHECK=true